    {
        static void Main(string[] args)
        {
            Console.Write(" number = ");
            int numb = int.Parse(Console.ReadLine());
            int main = numb / 1000;
            int max = Maxint(numb);
            int sum = max + main;
            Console.WriteLine("Sum = {0}", sum);

        }
        static int Maxint(int numb)
        {
            int max = 0;
            for(int i=0; i<4; i++)
            {if (numb % 10 > max)
                max = numb % 10;
            numb = numb / 10;

            }
            return max;

            
        }


    }
