            int y = Minint(Minint(Math.Abs(a + b), Math.Abs(a + c)), a + b + c); ;
            Console.WriteLine("y = {0}", y);

        }
       static int Minint (int numb1, int numb2)
        {
            int min = 0;
            if (numb1 <= numb2)
                min = numb1;
            if (numb2 < numb1)
                min= numb2;
            return min;



        }


    }
